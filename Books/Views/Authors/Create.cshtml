@model Author

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Author</h4>
<hr />
<div class="row ">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create" class="p-4 border rounded shadow-sm bg-light">
            <h4 class="mb-4">Create New Author Profile</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="FirstName" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="LastName" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="Biography" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                            <textarea asp-for="Biography" class="form-control" placeholder="Brief biography"></textarea>
                        </div>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group text-end mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-save"></i> Create
                </button>
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
