@model Rental

@{
    ViewData["Title"] = "Create Rental";
}

<h1 class="text-center mt-4">Create Rental</h1>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Rental Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Book Selection -->
            <div class="mb-3">
                <label asp-for="BookId" class="form-label">Select Book</label>
                <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId">
                    <option value="">-- Select a Book --</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <!-- User Selection -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label">Select User</label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                    <option value="">-- Select a User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Rented On -->
            <div class="mb-3">
                <label asp-for="RentedOn" class="form-label">Rented On</label>
                <input asp-for="RentedOn" type="date" class="form-control" />
                <span asp-validation-for="RentedOn" class="text-danger"></span>
            </div>

            <!-- Due Date -->
            <div class="mb-3">
                <label asp-for="DueDate" class="form-label">Due Date</label>
                <input asp-for="DueDate" type="date" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            <!-- Returned On -->
            <div class="mb-3">
                <label asp-for="ReturnedOn" class="form-label">Returned On</label>
                <input asp-for="ReturnedOn" type="date" class="form-control" />
                <span asp-validation-for="ReturnedOn" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Create Rental</button>
            </div>
        </form>
    </div>
</div>
