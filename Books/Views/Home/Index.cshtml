@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Book List</h2>




    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm">
                    <img src="@Url.Content("~/images/book-placeholder.jpg")" class="card-img-top" alt="Book Image">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">ISBN: @book.ISBN</p>
                        <p class="card-text">Author: @book.Author?.FirstName @book.Author?.LastName</p>
                        <p class="card-text"><strong>Genre:</strong> @book.Genre</p>
                        <p class="card-text"><strong>Summary:</strong> @book.Summary</p>
                        <p class="card-text"><strong>Price:</strong> @book.Price.ToString("C")</p>
                        <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
